<view class="container">
  <!-- Profile Header -->
  <view class="profile-header">
    <image src="{{userInfo.avatarUrl}}" class="avatar"></image>
    <view class="user-info">
      <view class="id">{{userInfo.id}}</view>
      <view class="days">今天是和你相遇的第 {{userInfo.joinDays}} 天</view>
    </view>
  </view>

  <!-- Stats -->
  <view class="stats-card">
    <view class="stat-item">
      <view class="value">{{stats.totalSessions}}</view>
      <view class="label">训练次数</view>
    </view>
    <view class="stat-item">
      <view class="value">{{stats.totalDuration}}</view>
      <view class="label">时长/分钟</view>
    </view>
  </view>
  
  <!-- Banner -->
  <view class="banner">
    <image src="/images/banner.png" mode="widthFix"></image>
  </view>

  <!-- Training Record -->
  <view class="record-card">
    <view class="record-title">训练记录</view>
    <view class="calendar">
      <view class="calendar-header">S</view>
      <view class="calendar-header">M</view>
      <view class="calendar-header">T</view>
      <view class="calendar-header">W</view>
      <view class="calendar-header">T</view>
      <view class="calendar-header">F</view>
      <view class="calendar-header">S</view>
      <view wx:for="{{calendar.days}}" wx:key="index" class="day-cell {{item.trained ? 'trained' : ''}}">
        {{item.day}}
      </view>
    </view>
    <button class="report-btn" bindtap="viewLastMonthReport">查看上月训练报告</button>
  </view>
</view>
