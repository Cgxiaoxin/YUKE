.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx; /* for bottom nav */
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  font-size: 32rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
  border-bottom: 2rpx solid #333;
}

.banner {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.banner image {
  width: 100%;
  border-radius: 10rpx;
}

.card {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.title-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
}

.more {
  font-size: 28rpx;
  color: #999;
}

.store-image {
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.store-details {
  display: flex;
  flex-direction: column;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
}

.store-address, .store-distance {
  font-size: 28rpx;
  color: #999;
}

.coaches {
  white-space: nowrap;
}

.coach-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  text-align: center;
}

.coach-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.coach-name {
  font-size: 30rpx;
  display: block;
}

.coach-price {
  font-size: 28rpx;
  color: #ff6b6b;
}

/* Styles for group class tab */
.date-selector {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #fff;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}

.date-item.selected {
  background-color: #e0e0e0;
  border-radius: 10rpx;
  padding: 5rpx 10rpx;
}

.weekday {
  margin-bottom: 5rpx;
}

.course-card {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.course-tags {
    margin-bottom: 10rpx;
}

.tag {
    background-color: #f0f0f0;
    color: #555;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
}
.course-main {
    display: flex;
    align-items: center;
}
.course-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}

.course-info {
    flex: 1;
}
.course-title {
    font-size: 32rpx;
    font-weight: bold;
}
.course-details {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}
.course-details .stars {
    color: #f5a623;
    margin: 0 5rpx;
}
.course-price {
    font-size: 28rpx;
    color: #ff6b6b;
    margin-right: 20rpx;
}
.book-btn {
    background-color: #333;
    color: #fff;
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    font-size: 28rpx;
}
