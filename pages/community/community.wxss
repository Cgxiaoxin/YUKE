.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding-bottom: 120rpx; /* for bottom nav */
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  font-size: 32rpx;
  color: #666;
  padding: 10rpx 20rpx;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
  border-bottom: 2rpx solid #333;
}

.section-title {
  padding: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
}

.leaderboard {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}

.rank-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  text-align: center;
  width: 45%;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.05);
}

.rank-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.rank-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.rank-label {
  font-size: 24rpx;
  color: #999;
}

.photo-wall {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  padding: 20rpx;
}

.photo-item {
  width: 100%;
  height: 250rpx; /* Adjust as needed */
  object-fit: cover;
  border-radius: 10rpx;
}
.more-photos {
  display: block;
  text-align: center;
  padding: 20rpx;
  color: #666;
}
